<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/style.css">
    <title>Dojo Survey</title>
</head>
<body>
    @model Survey
    <div class="Formpage">
        <div class="FormMain">
            <form asp-action="FormSubmit" asp-controller = "Home" method = "post">
                <div class="form-group">
                    <label >Your Name</label>
                    <input asp-for ="Name" class="form-control"><br>
                    <span class="text-danger" asp-validation-for = "Name"></span>
                </div>
                <div class="form-group">
                    <label >Dojo Location</label>
                    <select asp-for="Location" class="form-select" aria-label="Default select example">
                        <option >SDA</option>
                        <option >New York</option>
                        <option >Seattle</option>
                        <option >Online</option>
                    </select>
                </div>     
                <div class="form-group">
                    <label >Favorite Language</label>
                    <select asp-for="FavLang" class="form-select" aria-label="Default select example">
                        <option value="Mern FullStack" >Mern FullStack</option>
                        <option value="C#" >C#</option>
                        <option value="Python" >Python</option>
                        <option value="Javascript" >JavaScript</option>
                        <option value="C++" >C++</option>
                    </select>
                </div> 
                <div class="form-group">
                    <label >Comment (Optional)</label>
                    <textarea asp-for ="Comment" cols="30" rows="10" class="form-control"></textarea><br>

                    <span class="text-danger" asp-validation-for="Comment"></span>
                </div>
                <button class="btn btn-primary">Sumbit</button>       
    
            </form>                
        </div>
    </div>
</body>
</html>