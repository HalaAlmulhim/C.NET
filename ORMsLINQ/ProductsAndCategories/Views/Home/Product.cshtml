@model Product

<nav>
    <h3>Products</h3><span class="divider" > | </span><h3><a href="/category">Categories</a></h3>
</nav>


<div class="wrapper">
    <div class="form">
        <h3 class="text-center">New Product</h3>
        <form asp-action="AddProduct" asp-controller="Home" method="POST" >
            <div>
                <span asp-validation-for="ProductName" class="text-danger" ></span><br>
                <label asp-for="ProductName"></label>
                <input asp-for="ProductName" class="form-control" >
            </div>
            <div>
                <span asp-validation-for="Description" class="text-danger" ></span><br>
                <label asp-for="Description"></label>
                <textarea asp-for="Description" class="form-control" cols="10" rows="5" ></textarea>
            </div>
            <div>
                <span asp-validation-for="Price" class="text-danger" ></span><br>
                <label asp-for="Price"></label>
                <input asp-for="Price" class="form-control" >
            </div>
            <label></label>
            <button class="btn btn-info mt-3">Create</button>
        </form>
    </div>

    <div class="list">
        <h3 class="text-center">Existing Products</h3>
        <ul class="mt-5 ml-4" >
            @{
                foreach(Product p in ViewBag.allProducts)
                {
                    <li class="mt-3" ><a href="/product/@p.ProductId">@p.ProductName</a></li>
                }
            }
        </ul>
    </div>
</div>
