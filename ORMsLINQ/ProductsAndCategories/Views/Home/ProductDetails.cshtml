@model Product

<h3 class="text-center" >@Model.ProductName</h3>

<div class="wrapper">
    <div class="form">
        <h4 class="text-center" >Categories</h4>
        <ul class="mt-4" >
            @{
                foreach(var c in Model.CategoriesOfProduct)
                {
                    <li>@c.CategoryOfProduct.CategoryName</li>
                }
            }
        </ul>
    </div>

    <div class="list text-center">
        <h4>Add Category</h4>
        <form action="/product/@Model.ProductId/addcat" method="POST">
            <select class="form-control select" name="catId" >
                @foreach (var c in ViewBag.CategoiresNotInProduct)
                {
                    <option value="@c.CategoryId">@c.CategoryName</option>
                }
            </select><br>
            <button class="btn btn-info mt-4" >Add to Category</button>
        </form>
        
    </div>

</div>