@model Category

<h3 class="text-center" >@Model.CategoryName</h3>

<div class="wrapper">
    <div class="form">
        <h4 class="text-center" >Categories</h4>
        <ul class="mt-4" >
            @{
                foreach(var c in Model.ProductsOfCategory)
                {
                    <li>@c.ProductInCategory.ProductName</li>
                }
            }
        </ul>
    </div>

    <div class="list text-center">
        <h4>Add Category</h4>
        <form action="/category/@Model.CategoryId/addprod" method="POST">
            <select class="form-control select" name="prodId" >
                @foreach (var c in ViewBag.ProductsNotInCategory)
                {
                    <option value="@c.ProductId">@c.ProductName</option>
                }
            </select><br>
            <button class="btn btn-info mt-4" >Add to Category</button>
        </form>
    </div>

</div>