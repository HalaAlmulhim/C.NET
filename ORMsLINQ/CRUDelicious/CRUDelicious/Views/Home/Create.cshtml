@model Dish;

<a href="/">Home</a>
<h1>Add a New Dish</h1>
<div>
    <form asp-action="Create" asp-controller="Home" method="POST">
        <div>
            <p><span class="text-danger" asp-validation-for="Chef"></span></p>
            <label asp-for="Chef"></label>
            <input asp-for="Chef" name="Chef" type="text">
        </div>
        <div>
            <p><span class="text-danger" asp-validation-for="Name"></span></p>
            <label asp-for="Name"></label>
            <input asp-for="Name" name="Name" type="text">
        </div>
        <div>
            <p><span class="text-danger" asp-validation-for="Calories"></span></p>
            <label asp-for="Calories"></label>
            <input type="number" asp-for="Calories" name="Calories">
        </div>
        <div>
            <p><span class="text-danger" asp-validation-for="Tastiness"></span></p>
            <label asp-for="Tastiness"></label>
            <select asp-for="Tastiness" name="Tastiness" id="">
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
                <option value="5">5</option>
            </select>
        </div>
        <div>
            <p><span class="text-danger" asp-validation-for="Description"></span></p>
            <label asp-for="Description"></label>
            <textarea asp-for="Description" name="Description" id="Description" cols="30" rows="10"></textarea>
        </div>
        <input class="btn btn-success" type="submit">
        <a class="btn btn-danger" href="/">Cancel</a>
    </form>
</div>